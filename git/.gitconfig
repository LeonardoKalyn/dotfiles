#
# Git Config
# --------------------------------------------------------------------

[user]
  name   = Iago Dahlem Lorensini
  email  = iagodahlemlorensini@gmail.com
  editor = subl

[github]
  user = iagodahlem

[core]
  editor       = vim
  excludesfile = ~/.gitignore_global

[commit]
  template = ~/.gitmessage

[alias]
  # Git
  g = git

  # Add
  ad  = add
  aa = add --all
  aA = add -A

  # Branch
  b  = branch
  ba = branch -a
  bd = branch -d
  bD = branch -D
  bl = branch -l
  bv = branch -v

  # Checkout
  co  = checkout
  cob = checkout -b
  com = checkout master

  # Cherry-pick
  cp = cherry-pick

  # Clone
  cl = clone

  # Commit
  ci  = commit
  cim  = commit -m
  cia  = commit --amend
  ciam = commit -a -m

  # Config
  cg  = config
  cgg = config --global
  cgl = config --list

  # Diff
  d  = diff
  ds = diff --staged

  # Discard
  dc      = checkout --
  discard = checkout --

  # Fetch
  ft  = fetch
  ftp = fetch -p

  # Helpers
  bam     = "!source ~/.dotfiles/git/.githelpers"
  bamr    = "!source $DOTFILES_GIT/.githelpers && delete_remote_merged_branches"
  summary = "!source $DOTFILES_GIT/.githelpers && weekly_summary"
  pullall = "!source $DOTFILES_GIT/.githelpers && pull_all_repos_in_folder"

  # Lists
  branchs = branch -l
  configs = config --list
  remotes = remote -v
  tags    = tag -l

  # Logs
  l  = log --oneline
  lg = log --oneline --pretty=format:'%h %ad | [%an] %s%d' --graph --date=short

  # Merge
  mg  = merge
  mgm = merge master

  # Stash
  sth  = stash
  stha = stash apply
  sthl = stash list
  sthp = stash pop
  sths = stash show

  # Status
  s = status
  ss = status -s

  # Sync
  sync = "!git pull && git push"

  # Pull
  pl = pull

  # Push
  ps   = push
  psu  = push -u
  psuo = push -u origin

  # Remote
  rmta = remote add
  rmts = remote set-url
  rmtv = remote -v

  # Reset
  r   = reset
  rh  = reset HEAD
  rh1 = reset --hard HEAD~1
  rs1 = reset --soft HEAD~1

  # Undos
  undo     = reset --soft HEAD~1
  undopush = push -f origin HEAD^:master

  # Unstage
  ut      = reset HEAD
  unstage = reset HEAD

[color]
  branch = auto
  diff   = auto
  status = auto
  ui     = auto

[color "diff"]
  frag = magenta bold
  meta = yellow bold
  new  = green bold
  old  = red bold

[color "status"]
  added     = cyan bold
  branch    = cyan bold
  changed   = magenta bold
  deleted   = red bold
  untracked = yellow bold

[push]
  # 'git push' will push the current branch to its tracking branch
  # the usual default is to push all branches
  default = simple
