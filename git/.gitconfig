#
# Git Config
# ===========================================

[user]
	name   = Iago Dahlem Lorensini
	email  = iagodahlemlorensini@gmail.com
	editor = subl

[core]
    editor 		 = vim
    excludesfile = ~/.gitignore_global

[alias]
	# Git
	g = git

	# Add
	ad = add
	aa = add --all

	# Branch
	b  = branch
	ba = branch -a
	bd = branch -d
	bv = branch -v

	# Checkout
	co  = checkout
	cob = checkout -b
	com = checkout master

	# Cherry-pick
	cp = cherry-pick

	# Clone
	cl = clone

	# Commit
	c    = commit
	cm   = commit -m
	ca   = commit --amend
	cam  = commit -a -m

	# Config
	cg  = config
	cgg = config --global
	cgl = config --list

	# Diff
	df = diff

	# Discard
	discard = checkout --
	dc      = checkout --

	# Fetch
	ft = fetch

	# Logs
	l  = log --oneline
	lg = log --oneline --pretty=format:'%h %ad | [%an] %s%d' --graph --date=short

	# Merge
	mg = merge

	# Stash
	s  = stash
	sa = stash apply
	sl = stash list

	# Status
	st = status
	ss = status -s

	# Pull
	pl = pull

	# Push
	ps  = push
	psu = push -u

	# Remote
	ra = remote add
	rs = remote set-url
	rv = remote -v

	# Reset
	r   = reset
	rh  = reset HEAD
	rh1 = reset --hard HEAD~1
	rs1 = reset --soft HEAD~1

	# Unstage
	unstage = reset HEAD
	ut      = reset HEAD

[color]
	branch = auto
  	diff   = auto
  	status = auto
  	ui     = auto

[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old  = red bold
    new  = green bold

[color "status"]
    added     = cyan bold
    branch    = cyan bold
    changed   = magenta bold
    deleted   = red bold
    untracked = yellow bold

[push]
    # 'git push' will push the current branch to its tracking branch
    # the usual default is to push all branches
    default = simple
