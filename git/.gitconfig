[core]
  editor = vim
  excludesfile = ~/.gitignore_global
	pager = diff-so-fancy | less --tabs=4 -RFX
[commit]
  template = ~/.gitmessage
[alias]
  # git
  g = git

  # add
  ad = add
  aa = add --all
  ap = add -p

  # branch
  br = branch
  bra = branch -a
  brd = branch -d
  brD = branch -D
  brl = branch -l
  brv = branch -v

  # checkout
  co = checkout
  cob = checkout -b
  com = checkout master
  cod = checkout develop

  # cherry-pick
  cp = cherry-pick -x

  # clone
  cl = clone

  # commit
  ci = commit
  cim = commit -m
  cia = commit --amend
  ciam = commit -am

  # diff
  df = diff
  dfs = diff --staged
  dfc = diff --cached
  last = diff HEAD^ # diff last commited change

  # discard
  dc = checkout --
  discard = checkout --

  # fetch
  ft = fetch
  ftp = fetch --prune

  # helpers
  bam = !git branch --merged master | grep -v master | xargs git branch -d
  bad = !git branch --merged develop | grep -v master | grep -v develop | xargs git branch -d

  # lists
  aliases = !git config -l | grep alias | cut -c 7-
  branchs = branch -v
  configs = config --list
  remotes = remote -v
  tags = tag -l

  # logs
  l = log --oneline --date=short
  lg = log --oneline --pretty=format:'%h %ad | [%an] %s%d' --graph --date=short

  # merge
  mg = merge
  mgm = merge master
  mgd = merge develop

  # pull
  pl = pull
  plp = pull --prune

  # push
  ps = push
  psu = push -u
  psuo = push -u origin
  psuom = push -u origin master

  # reset
  rt = reset

  # stash
  sh = stash
  sha = stash apply
  shd = stash drop
  shl = stash list
  shp = stash pop
  shs = stash show

  # status
  st = status
  ss = status -s

  # undos
  uncommit = reset --soft HEAD~1
  undocommit = reset --hard HEAD~1
  undopush = push -f origin HEAD^:master

  # unstage
  us = reset HEAD
  unstage = reset HEAD
[color]
  ui = auto
  branch = auto
  diff = auto
  status = auto
[color "diff"]
  frag = magenta bold
  meta = yellow bold
  new = green
  old = red
[color "status"]
  added = cyan bold
  branch = cyan bold
  changed = magenta bold
  deleted = red bold
  untracked = yellow bold
[push]
  # 'git push' will push the current branch to its tracking branch
  # the usual default is to push all branches
  default = simple
