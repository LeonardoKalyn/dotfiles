# dotfiles support
alias dots="cd $DOTFILES"
alias dotsconf="cd $DOTFILES && $EDITOR ."
alias dotsup="source $DOTFILES_BIN/upgrade.sh"
alias dotscolors="source $DOTFILES_BIN/colors.sh"

# apt-get
alias autoclean="sudo apt-get autoclean"
alias autoremove="sudo apt-get autoremove -y --purge"
alias check="sudo apt-get check"
alias clean="sudo apt-get clean"
alias dist-upgrade="sudo apt-get dist-upgrade -y"
alias install="sudo apt-get install -y"
alias purge="sudo apt-get purge -y"
alias remove="sudo apt-get remove -y"
alias update="sudo apt-get update"
alias upgrade="sudo apt-get upgrade -y"

alias up="update && upgrade && dist-upgrade"
alias cleanup="clean && autoclean && autoremove"

# directories
alias dev="cd $DEV"
alias desktop="cd $DESKTOP"
alias documents="cd $DOCUMENTS"
alias downloads="cd $DOWNLOADS"
alias dropbox="cd $DROPBOX"
alias projects="cd $PROJECTS"

alias dlist="dirs -v | head -10"

# directories shortcuts
alias d="dev"
alias dt="desktop"
alias dc="documents"
alias dl="downloads"
alias db="dropbox"
alias pr="projects"

# show human friendly numbers and colors
alias df='df -h'
alias du='du -h -d 2'

# override rm -i alias which makes rm prompt for every action
alias rm='nocorrect rm'

# general commands
alias cat="pygmentize -O style=monokai -f console256 -g"
alias top="htop"

# general shortcuts
alias c="cat"
alias i="install"
alias r="reload"
alias t="top"

# hosts
alias hosts='sudo $EDITOR /etc/hosts'

# zsh & oh-my-zsh
alias reload=". ~/.zshrc"
alias zsh="$EDITOR $HOME/.zshrc"
alias ohmyzsh="$EDITOR $HOME/.oh-my-zsh"
