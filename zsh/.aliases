#
# Aliases
# ---------------------------------------------------------------------

# -- APT-GET ----------------------
alias autoclean="$APTGET autoclean"
alias autoremove="$APTGET autoremove -y"
alias clean="$APTGET clean"
alias check="$APTGET check"
alias dist-upgrade="$APTGET dist-upgrade -y"
alias install="$APTGET install -y"
alias remove="$APTGET remove -y"
alias update="$APTGET update"
alias upgrade="$APTGET upgrade -y"
alias up="update && upgrade && dist-upgrade"
alias cleanup="clean && autoclean && autoremove"

# -- Directories ------------------
alias dev="cd $DEV"
alias desktop="cd $DESKTOP"
alias documents="cd $DOCUMENTS"
alias downloads="cd $DOWNLOADS"
alias dropbox="cd $DROPBOX"
alias projects="cd $PROJECTS"
alias repos="cd $REPOS"
alias softwares="cd $SOFTWARES"

# -- Directories Shortcuts --------
alias d="dev"
alias dt="desktop"
alias dc="documents"
alias dl="downloads"
alias db="dropbox"
alias pr="projects"
alias rp="repos"
alias sw="softwares"

# -- Dotfiles ---------------------
alias dots="cd $DOTFILES"
alias dotsconf="cd $DOTFILES && $EDITOR ."
alias dotsup="dots && git pull && reload"
alias dotsbackup="source ~/.dotfiles/scripts/backup.sh"

# -- General Shortcuts ------------
alias c="cat"
alias h="history"
alias i="install"
alias n="nautilus"
alias r="reload"
alias t="top"
alias u="superup"

# -- NPM --------------------------
alias npm-clean="rm -rf node_modules"
alias npm-clean-install="npm-clean && npm i"
alias npmc="npm-clean"
alias npmci="npm-clean-install"

# -- Server PHP -------------------
alias server-start="$SERVICE_NGINX start && $SERVICE_MYSQL start && $SERVICE_PHP start"
alias server-restart="$SERVICE_NGINX restart && $SERVICE_MYSQL restart && $SERVICE_PHP restart"
alias server-stop="$SERVICE_NGINX stop && $SERVICE_MYSQL stop && $SERVICE_PHP stop"

# -- Stopwatch --------------------
alias timer="echo 'Timer started. Stop with Ctrl-D.' && date && time cat && date"

# -- Top --------------------------
alias top="htop"

# -- Trash ------------------------
alias t="trash"
alias e="empty-trash"

# -- Workflow ---------------------
alias work=""

# -- ZSH & Oh-My-Zsh --------------
alias reload=". ~/.zshrc"
alias zsh="$EDITOR $HOME/.zshrc"
alias ohmyzsh="$EDITOR $HOME/.oh-my-zsh"
